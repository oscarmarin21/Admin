    "@node-rs/argon2": "^2.0.2",
    "awilix": "^12.0.5",
    "cors": "^2.8.5",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.0.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.13",
    "pino": "^9.1.0",
    "pino-http": "^10.0.0",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
